<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_70sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/ic_group" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_20sdp"
            android:paddingBottom="@dimen/_20sdp">

            <CheckBox
                android:id="@+id/chk_volunteers"
                style="@style/StyleCheckBox"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:text="@string/volunteers"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edt_volunteers"
                style="@style/StyleEditTextFull"
                android:layout_width="0dp"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="top"
                android:hint="@string/hint_enter_item"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="200"
                android:singleLine="false"
                app:layout_constraintEnd_toStartOf="@+id/edt_qty1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chk_volunteers" />

            <EditText
                android:id="@+id/edt_qty1"
                style="@style/StyleEditTextFull"
                android:layout_width="@dimen/_60sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:digits="0123456789"
                android:hint="@string/hint_qty"
                android:inputType="number"
                android:maxLength="3"
                android:paddingStart="@dimen/_4sdp"
                android:paddingEnd="@dimen/_4sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/edt_item"
                app:layout_constraintTop_toBottomOf="@+id/chk_volunteers" />


            <CheckBox
                android:id="@+id/chk_technical_personnel"
                style="@style/StyleCheckBox"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:text="@string/technical_personnel"
                app:layout_constraintTop_toBottomOf="@+id/edt_volunteers" />

            <EditText
                android:id="@+id/edt_technical_personnel"
                style="@style/StyleEditTextFull"
                android:layout_width="0dp"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="top"
                android:hint="@string/hint_enter_item"
                android:imeOptions="actionNone"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="200"
                android:singleLine="false"
                app:layout_constraintEnd_toStartOf="@+id/edt_qty2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chk_technical_personnel" />

            <EditText
                android:id="@+id/edt_qty2"
                style="@style/StyleEditTextFull"
                android:layout_width="@dimen/_60sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:digits="0123456789"
                android:hint="@string/hint_qty"
                android:inputType="number"
                android:maxLength="3"
                android:paddingStart="@dimen/_4sdp"
                android:paddingEnd="@dimen/_4sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/edt_technical_personnel"
                app:layout_constraintTop_toBottomOf="@+id/chk_technical_personnel" />


            <Button
                android:id="@+id/we_can_pay"
                style="@style/StyleLoginButtonPrimary"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="@string/we_can_pay"
                app:layout_constraintEnd_toStartOf="@+id/we_can_not_pay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_technical_personnel" />

            <Button
                android:id="@+id/we_can_not_pay"
                style="@style/StyleLoginButtonPrimaryRevert"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="@string/we_can_not_pay"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/we_can_pay"
                app:layout_constraintTop_toBottomOf="@+id/edt_technical_personnel" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</LinearLayout>