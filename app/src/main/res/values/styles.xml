<resources>

    <style name="HomeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/hindi_font</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <style name="AskForHelpTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/hindi_font</item>
    </style>

    <style name="BottomSheetThemeAskForHelp" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>

    <style name="BottomSheetThemeOfferHelp" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>


    <style name="OfferTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccentDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorAccent</item>
    </style>


    <style name="DotsDarkTheme" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="HomeToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/_45sdp</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
        <item name="actionOverflowButtonStyle">@style/DotsDarkTheme</item>
        <item name="titleTextColor">@color/colorPrimary</item>
    </style>

    <style name="AppToolbarAskHelp" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/_45sdp</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
    </style>

    <style name="AppToolbarOfferHelp" parent="AppToolbarAskHelp">
        <item name="titleTextColor">@color/colorAccent</item>
    </style>


    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="Heading6" parent="BaseTextView">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:fontFamily">@string/roboto_medium</item>
    </style>

    <!--Base TextView -->
    <style name="BaseTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--use as body text-->
    <style name="StyleEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
    </style>

    <style name="StyleEditTextFull" parent="StyleEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/_40sdp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">@dimen/_6sdp</item>
        <item name="android:paddingEnd">@dimen/_6sdp</item>
        <item name="android:paddingTop">@dimen/_2sdp</item>
        <item name="android:paddingBottom">@dimen/_2sdp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:background">@drawable/rounded_background</item>
    </style>

    <style name="StyleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@string/roboto_medium</item>
    </style>

    <style name="StyleTextView.Small">
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="StyleTextViewNormal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
    </style>

    <style name="BodyTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="StyleTextView.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleButton" parent="BaseTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@string/roboto_medium</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>


    <style name="StyleCheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="StyleCheckBoxRight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@string/roboto_medium</item>
    </style>

    <style name="StyleTextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_25sdp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="StyleLoginButton" parent="StyleButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_42sdp</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="StyleLoginButtonPrimary" parent="StyleLoginButton">
        <item name="android:background">@drawable/primary_border_background</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="StyleLoginButtonPrimaryRevert" parent="StyleLoginButton">
        <item name="android:background">@drawable/primary_revert_border_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StyleLoginButtonAccent" parent="StyleLoginButton">
        <item name="android:background">@drawable/accent_border_background</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="StyleLoginButtonPrimaryAccent" parent="StyleLoginButton">
        <item name="android:background">@drawable/accent_revert_border_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StyleRadio">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:fontFamily">@string/roboto_medium</item>
    </style>

    <style name="HomeButton" parent="StyleButton">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
    </style>

    <style name="TabStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="tabIndicatorHeight">@dimen/_3sdp</item>
        <item name="tabTextColor">@color/colorAccent</item>
        <item name="tabTextAppearance">?android:attr/textAppearanceMedium</item>
        <item name="tabPaddingStart">@dimen/_6sdp</item>
        <item name="tabPaddingEnd">@dimen/_6sdp</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="GPlusProgressBar" parent="SmoothProgressBar">
        <item name="spb_stroke_separator_length">12dp</item>
        <item name="spb_sections_count">4</item>
        <item name="spb_speed">0.7</item>
        <item name="spb_interpolator">spb_interpolator_linear</item>
        <item name="spb_colors">@array/gplus_colors</item>
    </style>
</resources>
